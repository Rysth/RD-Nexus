# =============================================================================
# NEXUS - Production Environment Variables
# =============================================================================
# Copy this file to .env and fill in your production values
# For Dokploy: Add these in the Environment Variables section
# =============================================================================

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------
NODE_ENV=production
ADONIS_PORT=3333

# -----------------------------------------------------------------------------
# ADONISJS APP KEY (REQUIRED - GENERATE A NEW ONE!)
# -----------------------------------------------------------------------------
# Generate with: node ace generate:key
# Or use: openssl rand -base64 32
ADONIS_APP_KEY=your_generated_app_key_here

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION (PostgreSQL)
# -----------------------------------------------------------------------------
# For Dokploy: Use internal database service or external PostgreSQL
DB_HOST=your_postgres_host
DB_PORT=5432
DB_USER=nexus_user
DB_PASSWORD=your_secure_db_password
DB_NAME=nexus_production

# -----------------------------------------------------------------------------
# FRONTEND & BACKEND URLs
# -----------------------------------------------------------------------------
FRONTEND_URL=https://nexus.rysthdesign.com
VITE_API_URL=https://nexus-api.rysthdesign.com
APP_URL=https://nexus-api.rysthdesign.com

# -----------------------------------------------------------------------------
# REDIS CONFIGURATION (Required for caching and jobs queue)
# -----------------------------------------------------------------------------
# For Dokploy: Use internal Redis service or external Redis
REDIS_HOST=your_redis_host
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_QUEUE=default

# -----------------------------------------------------------------------------
# FILE STORAGE (Using local filesystem - no R2 needed)
# -----------------------------------------------------------------------------
DRIVE_DISK=fs

# -----------------------------------------------------------------------------
# SMTP CONFIGURATION (Hostinger)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_USER=support@rysthdesign.com
SMTP_PASSWORD=your_hostinger_smtp_password

# =============================================================================
# CLOUDFLARE R2 (OPTIONAL - Not used for now, keep empty)
# =============================================================================
# Uncomment and fill if you decide to use R2 in the future
# DRIVE_DISK=r2
# R2_ACCESS_KEY_ID=
# R2_SECRET_ACCESS_KEY=
# R2_BUCKET=
# R2_ENDPOINT=
# R2_CDN_URL=
