TZ=UTC
PORT=3333
HOST=0.0.0.0
LOG_LEVEL=info
# Generate with: node ace generate:key
APP_KEY=
NODE_ENV=development

# Database Configuration
# For Docker: DB_HOST=postgres
# For local: DB_HOST=127.0.0.1
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_DATABASE=adonisjs_api_development

SESSION_DRIVER=cookie

# SMTP Configuration
# For local dev with Mailpit: SMTP_HOST=mailpit, SMTP_PORT=1025
# For production: configure your SMTP provider
SMTP_HOST=mailpit
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=

# Frontend URL for email links
FRONTEND_URL=http://localhost:5173
APP_URL=http://localhost:3333

# Drive Configuration (File Storage)
# Options: fs (local filesystem), r2 (Cloudflare R2)
DRIVE_DISK=fs

# Cloudflare R2 Configuration (production only)
# Get these from your Cloudflare R2 dashboard
# R2_ACCESS_KEY_ID=your_access_key_id
# R2_SECRET_ACCESS_KEY=your_secret_access_key
# R2_BUCKET=your_bucket_name
# R2_ENDPOINT=https://<account_id>.r2.cloudflarestorage.com
# R2_CDN_URL=https://your-custom-domain.com (optional, for public URL)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=