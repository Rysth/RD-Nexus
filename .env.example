# Server Configuration
NODE_ENV=development
PORT=3333

# Database configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=adonisjs_api_development

# AdonisJS Configuration
ADONIS_PORT=3333
# Generate with: node ace generate:key
ADONIS_APP_KEY=your_app_key_here
ADONIS_DB_NAME=adonisjs_api_development

# Frontend configuration
FRONTEND_URL=http://localhost:5173
VITE_API_URL=http://localhost:3333
APP_URL=http://localhost:3333

# Drive / File storage
# Options: fs (local filesystem) or r2 (Cloudflare R2)
DRIVE_DISK=fs
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_CDN_URL=

# SMTP Configuration
# For local development with Mailpit, use:
# SMTP_HOST=mailpit, SMTP_PORT=1025
# For production, configure your SMTP provider (port 587 for STARTTLS, 465 for implicit TLS)
SMTP_HOST=mailpit
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_DOMAIN=localhost

# Redis
REDIS_URL=redis://redis-db:6379/1

# Admin seed credentials
# In production: leave ADMIN_PASSWORD unset to auto-generate
ADMIN_EMAIL=admin@example.com
# ADMIN_PASSWORD=change_me_strong_password